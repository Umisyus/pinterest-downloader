{
  "extends": "@apify/tsconfig",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "dist",
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "ES2022"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
